					<paragraph lineSpacing="Single" leftIndent="5"/>
				</textElement>
				<text><![CDATA[5. RÉGIMEN LABORAL DEL PROPONENTE]]></text>
			</staticText>
			<staticText>
				<reportElement uuid="29692370-a4f9-4a10-a5e3-4fe941be7d73" mode="Opaque" x="0" y="117" width="532" height="16" forecolor="#FFFFFF" backcolor="#666666"/>
